<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.aptopayments.sdk.ui.views.AptoWebView
        android:id="@+id/wb_content_web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_content_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/llsdk_medium_margin"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginRight="@dimen/llsdk_medium_margin"
        android:lineSpacingMultiplier="@dimen/llsdk_content_line_spacing_multiplier"
        android:textSize="@dimen/llsdk_content_text_size"
        android:visibility="gone" />

    <TextView
        android:id="@+id/md_content_markdown"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/llsdk_medium_margin"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginRight="@dimen/llsdk_medium_margin"
        android:textSize="@dimen/llsdk_content_text_size"
        android:visibility="gone"/>

    <com.aptopayments.sdk.ui.views.NativeContentView
        android:id="@+id/vw_native_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</RelativeLayout>
