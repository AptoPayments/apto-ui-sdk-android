<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            tools:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/t_card_name"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/llsdk_card_left_margin"
            android:layout_marginRight="@dimen/llsdk_card_left_margin"
            android:layout_marginBottom="@dimen/llsdk_card_number_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/card_number_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:text="@string/manage_card_number_placeholder"
                android:textSize="@dimen/llsdk_card_number_text_size"
                tools:text="1234" />

            <TextView
                android:id="@+id/card_number_space_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/card_number_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/manage_card_number_placeholder"
                android:textSize="@dimen/llsdk_card_number_text_size"
                tools:text="1234" />

            <TextView
                android:id="@+id/card_number_space_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:focusable="false" />

            <TextView
                android:id="@+id/card_number_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/manage_card_number_placeholder"
                android:textSize="@dimen/llsdk_card_number_text_size"
                tools:text="1234" />

            <TextView
                android:id="@+id/card_number_space_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/card_number_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@android:color/transparent"
                android:gravity="end"
                android:maxLines="1"
                android:text="@string/manage_card_number_placeholder"
                android:textSize="@dimen/llsdk_card_number_text_size"
                tools:text="1234" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_expiration_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/llsdk_card_left_margin"
            android:alpha="0.7"
            android:paddingBottom="@dimen/llsdk_card_bottom_margin"
            android:text="@string/card_expiration_date_label"
            android:textSize="@dimen/llsdk_expiry_date_label_text_size"
            tools:ignore="SmallSp"
            tools:textColor="@color/llsdk_dark_text_color" />

        <TextView
            android:id="@+id/t_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_expiration_label"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/llsdk_card_left_margin"
            android:layout_marginBottom="@dimen/llsdk_card_holder_name_margin"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:paddingEnd="2dp"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textSize="@dimen/llsdk_card_name_text_size"
            tools:ignore="UnusedAttribute"
            tools:text="TAYLOR SHIFT" />

        <ImageView
            android:id="@+id/iv_card_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/llsdk_card_left_margin"
            android:paddingBottom="@dimen/llsdk_card_bottom_margin"
            tools:src="@drawable/ic_visa_logo" />

        <TextView
            android:id="@+id/t_expirity_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/llsdk_card_field_margin_left"
            android:layout_toEndOf="@+id/tv_expiration_label"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:paddingBottom="@dimen/llsdk_card_bottom_margin"
            android:singleLine="true"
            android:textSize="@dimen/llsdk_expiry_date_text_size"
            tools:text="02/25" />

        <TextView
            android:id="@+id/tv_cvv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/llsdk_card_left_margin"
            android:layout_toEndOf="@+id/t_expirity_date"
            android:alpha="0.7"
            android:paddingBottom="@dimen/llsdk_card_bottom_margin"
            android:text="@string/card_cvv_label"
            android:textSize="@dimen/llsdk_cvv_text_label_size"
            tools:ignore="SmallSp"
            tools:textColor="@color/llsdk_dark_text_color" />

        <TextView
            android:id="@+id/t_cvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/llsdk_card_field_margin_left"
            android:layout_toEndOf="@+id/tv_cvv_label"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:maxLength="4"
            android:paddingBottom="@dimen/llsdk_card_bottom_margin"
            android:singleLine="true"
            android:textSize="@dimen/llsdk_cvv_text_size"
            tools:text="555" />

        <include
            layout="@layout/include_card_disabled_overlay"
            android:visibility="gone" />

        <include
            layout="@layout/include_card_error_overlay"
            android:visibility="gone" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
